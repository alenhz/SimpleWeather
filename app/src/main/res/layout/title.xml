<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/title_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp">
    <TextView
        android:id="@+id/title_text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="72sp" />
    <TextView
        android:id="@+id/title_text_CL03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_text_temperature"
        android:layout_alignTop="@id/title_text_temperature"
        android:textColor="#fff"
        android:textSize="16sp"
        android:paddingTop="15dp"
        android:text="℃"/>
    <TextView
        android:id="@+id/title_text_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text_temperature"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text_city_name"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_text_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:paddingRight="3dp" />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/title_text_weather_pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/title_text_wind_power"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/title_text_humidity"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/title_text_somatosensory_temperature"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearlayout_1">
        <TextView
            android:id="@+id/title_text_wind_text"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/title_text_CL01"
            android:text="相对湿度"
            android:typeface="sans"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/title_text_CL02"
            android:text="体感温度"
            android:typeface="monospace"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>